{% extends "base.twig" %}

{% block style %}
    <link rel="stylesheet" href="/assets/css/managerRegister.css">
{% endblock %}

{% block main %}
<form action="/managerRegister" method="POST" enctype="multipart/form-data">
    <h2>REGISTER (Manager Form)</h2>
    
    {% if error %}
        <div style="color: red;">{{ error }}</div> <!-- Affichage de l'erreur -->
    {% endif %}
    
    <div id="manager-infos-container">
        <div id="manager-leftinfos-container">
            <div class="manager-form-group">
                <label for="username">Username</label>
                <input type="text" id="username" name="username" placeholder="Choose your username.." value="{{ formData.username }}" required>
            </div>
            <div class="manager-form-group">
                <label for="age">Age</label>
                <input type="number" id="age" name="age" placeholder="Enter your age.." value="{{ formData.age }}" required>
            </div>
            <div class="manager-form-group">
                <label for="gameCategory">Game Category</label>
                <select id="gameCategory" name="gameCategory" required>
                    <option value="fps" {% if formData.gameCategory == 'fps' %}selected{% endif %}>FPS</option>
                    <option value="fgc" {% if formData.gameCategory == 'fgc' %}selected{% endif %}>FGC</option>
                </select>
            </div>
            <div class="manager-form-group">
                <label for="teamName">Team Name</label>
                <input type="text" id="teamName" name="teamName" placeholder="Enter your team name.." value="{{ formData.teamName }}" required>
            </div>
            <div class="manager-form-group">
                <label for="lastname">Lastname</label>
                <input type="text" id="lastname" name="lastname" placeholder="Enter your lastname.." value="{{ formData.lastname }}" required>
            </div>
            <div class="manager-form-group">
                <label for="nationality">Nationality</label>
                <input type="text" id="nationality" name="nationality" placeholder="Enter your nationality.." value="{{ formData.nationality }}" required>
            </div>
        </div>
        <div id="manager-rightinfos-container">
            <div class="manager-form-group">
                <label for="email">Email</label>
                <input type="email" id="email" name="email" placeholder="Enter your email.." value="{{ formData.email }}" required>
            </div>
            <div class="manager-form-group">
                <label for="photo">Upload your picture for profile</label>
                <input type="file" id="photo" name="photo" required>
            </div>
            <div class="manager-form-group">
                <label for="password">Password</label>
                <input type="password" id="password" name="password" placeholder="Choose your password.." required>
            </div>
            <div class="manager-form-group">
                <label for="phonenumber">Phone Number</label>
                <input type="tel" id="phonenumber" name="phonenumber" placeholder="Enter your phone number.." value="{{ formData.phonenumber }}" required>
            </div>
            <div class="manager-form-group">
                <label for="firstname">Firstname</label>
                <input type="text" id="firstname" name="firstname" placeholder="Enter your firstname.." value="{{ formData.firstname }}" required>
            </div>
        </div>
    </div>
    <div id="manager-nextButt-container">
        <button type="submit">Register</button>
    </div>
</form>
{% endblock %}
