    {% extends "base.twig" %}
    {% block style %}
        <link rel="stylesheet" href="/assets/css/playerRegister.css">
    {% endblock %}
    {% block main %}
    <form action="/playerRegister" method="POST" enctype="multipart/form-data">
        <h2>REGISTER (Gamer Form)</h2>
        <div id="allinfos-container">
            <div id="leftinfos-container">
                <div class="form-group">
                    <label for="username">Username</label>
                    <input type="text" id="username" name="username" placeholder="Choose your username..">
                </div>
                <div class="form-group">
                    <label for="age">Age</label>
                    <input type="number" id="age" name="age" placeholder="Enter your age..">
                </div>
                <div class="form-group">
                    <label for="gameCategory">Game Category</label>
                    <select id="gameCategory" name="gameCategory" required>
                        <option value="fps" {% if formData.gameCategory == 'FPS' %}selected{% endif %}>FPS</option>
                        <option value="fgc" {% if formData.gameCategory == 'FGC' %}selected{% endif %}>FGC</option>
                    </select>
                </div>
                <div class="form-group">
                    <label for="lastname">Lastname</label>
                    <input type="text" id="lastname" name="lastname" placeholder="Enter your lastname..">
                </div>
                <div class="form-group">
                <label for="nationality">Nationalité :</label>
                <select id="nationality" name="nationality" required>
                    <option value="">Sélectionnez un pays</option>
                    <option value="france" {% if player.nationality == 'France' %}selected{% endif %}>France</option>
                    <option value="italy" {% if player.nationality == 'Italy' %}selected{% endif %}>Italie</option>
                    <option value="england" {% if player.nationality == 'England' %}selected{% endif %}>Angleterre</option>
                    <option value="germany" {% if player.nationality == 'Germany' %}selected{% endif %}>Allemagne</option>
                </select>
                </div>
            </div>
            <div id="rightinfos-container">
                <div class="form-group">
                    <label for="email">Email</label>
                    <input type="email" id="email" name="email" placeholder="Enter your email..">
                </div>
                <div class="form-group">
                    <label for="photo">Upload your picture for profile</label>
                    <input type="file" id="photo" name="photo">
                </div>
                <div class="form-group">
                    <label for="password">Password</label>
                    <input type="password" id="password" name="password" placeholder="Choose your password..">
                </div>
                <div class="form-group">
                    <label for="phonenumber">Phone Number</label>
                    <input type="tel" id="phonenumber" name="phonenumber" placeholder="Enter your phone number..">
                </div>
                <div class="form-group">
                    <label for="firstname">Firstname</label>
                    <input type="text" id="firstname" name="firstname" placeholder="Enter your firstname..">
                </div>
            </div>
        </div>
        <div id="nextButt-container">
            <button type="submit">Register</button>
        </div>
    </form>
    {% endblock %}
